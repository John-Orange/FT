<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BMIActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI Calculator"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/etHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your height (cm)"
        android:inputType="numberDecimal"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:id="@+id/etWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your weight (kg)"
        android:inputType="numberDecimal"
        android:layout_below="@id/etHeight"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/btnCalculateBmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate BMI"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etWeight"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvBmiResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI Result: "
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnCalculateBmi"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnTrackActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Track Activity"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvBmiResult"
        android:layout_marginTop="20dp"/>


</RelativeLayout>


